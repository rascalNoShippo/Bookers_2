<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :name, class: "d-block mb-0" %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "d-block w-25" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "d-block mb-0" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "d-block w-25" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions form-group">
    <%= f.submit "Log in" , class: "px-3 btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
