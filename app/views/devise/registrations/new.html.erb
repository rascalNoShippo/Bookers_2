<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field form-group">
    <%= f.label :name, class: "d-block mb-0" %>
    <%= f.text_field :name, autofocus: true, class: "d-block w-25" %>
  </div>

  <div class="field form-group">
    <%= f.label :email, class: "d-block mb-0" %>
    <%= f.email_field :email, autocomplete: "email", class: "d-block w-25" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class: "d-block mb-0" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "d-block w-25" %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation, class: "d-block mb-0" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "d-block w-25" %>
  </div>

  <div class="actions form-group">
    <%= f.submit "Sign up", class: "px-3 btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
