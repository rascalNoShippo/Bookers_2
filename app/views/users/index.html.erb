<% content_for(:pagetitle, "List of users") %>

<h2>Users</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th class="col-1 text-center">image</th>
      <th class="col-10">name</th>
      <th class="col-1 text-center"></th>
    </tr>
  </thead>
  <tbody>
    <% User.all.each do |user| %>
      <tr>
        <td class="align-middle text-center">
          <%= link_to user_path(user.id) do %>
            <%= image_tag user.get_profile_image(100, 100) %>
          <% end %>
        </td>
        <td class="align-middle"><%= link_to user.name, user_path(user.id) %></td>
        <td class="align-middle text-center"><%= link_to "Show", user_path(user.id),class: "btn btn-info" %></td>
      </tr>
    <% end %>
  </tbody>
</table>